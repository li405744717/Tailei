<view class="flex_row align_center margin_top_40 padding_LR_40">
    <view class="flex_column role_view {{selectList!==index?'role_view_un':''}} margin_right_40" wx:for="{{list}}"
          wx:key="list{{index}}"
          bindtap="selectList" data-index="{{index}}">
        <text class="text_30 c_FFAB19">{{item.type_name}}</text>
    </view>
</view>
<scroll-view wx:if="{{list[selectList].contents && list[selectList].contents.length > 0}}" class="flex_1 flex_column bg_fg margin_top_30">
    <block wx:for="{{list[selectList].contents}}" wx:key="content{{index}}" bindtap="goInfo" data-index="{{index}}"
           data-item="{{item}}">
        <view class="house_item flex_column">
            <text class="text_26 black margin_bottom_30">{{item.remark}}</text>
            <view class="flex_row flex_warp">
                <view wx:for="{{item.images}}" wx:for-item="image" wx:key="image{{index}}"
                      class="house_add_view relative">
                    <image src="{{image}}" class="flex_row width_100 height_100"/>
                </view>
            </view>
            <view wx:if="{{list[selectList].type === '111'}}" class="flex_row align_center border_top padding_TB_30">
                <text class="text_28 c_999999 flex_1">提交时间：{{item.create_time}}</text>
                <text class="text_26 c_999999">待处理</text>
            </view>
            <view wx:elif="{{list[selectList].type === '222'}}" class="flex_row align_center border_top padding_TB_30">
                <text class="text_28 black">需缴纳金额：</text>
                <text class="text_30 c_FFAB19">{{item.price}}元</text>
                <view class="flex_1"/>
                <view class="repair_list_pay_btn flex_row center" bindtap="goPay" data-item="{{item}}">
                    <text class="text_28 c_FFAB19">立即付款</text>
                </view>
            </view>
            <view wx:elif="{{list[selectList].type === '333'}}" class="flex_row align_center border_top padding_TB_30">
                <text class="text_28 c_999999 flex_1">订单时间：{{item.create_time}}</text>
                <text class="text_26 c_999999">已完成</text>
            </view>
        </view>
        <view wx:if="{{list[selectList].type === '222'}}" class="flex_row align_center padding_LR_30 margin_bottom_30">
            <text class="text_18 c_999999">提交时间：{{item.create_time}}</text>
        </view>
    </block>
</scroll-view>
<view wx:else class="flex_1 flex_column center content_view">
    <image src="/images/icon_empty.png" class="icon_empty"/>
    <text class="text_26 light margin_top_80">暂无数据～</text>
</view>